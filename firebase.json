{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  },
  "functions": {
    "predeploy": [],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 81,
      "host": "0.0.0.0"
    },
    "hosting": {
      "port": 80,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true
    }
  }
}
